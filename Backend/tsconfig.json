{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noCheck": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
